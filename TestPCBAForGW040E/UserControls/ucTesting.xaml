             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestPCBAForGW040E.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">

    <Border CornerRadius="5,5,5,5" Background="#FF777777">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <!--<TextBlock Grid.Row="0" Foreground="#FFF57F17" FontSize="50" Text="Waiting..." HorizontalAlignment="Right" Margin="0,0,10,0"></TextBlock>-->
