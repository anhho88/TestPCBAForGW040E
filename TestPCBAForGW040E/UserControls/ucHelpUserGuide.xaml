<UserControl x:Class="TestPCBAForGW040E.UserControls.ucHelpUserGuide"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestPCBAForGW040E.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Border CornerRadius="5,5,5,5" Background="#FFFAFAFA">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <DocumentViewer Grid.Row="0" x:Name="docViewer"></DocumentViewer>
            <Grid Grid.Row="1" Background="#FF777777">
                <WrapPanel HorizontalAlignment="Right" Margin="5,5,10,5">
                    <Button x:Name="btnClose" FontSize="15" Margin="10,0,0,0" Height="40" Width="80">Close</Button>
                </WrapPanel>
            </Grid>
        </Grid>
    </Border>
    
</UserControl>
